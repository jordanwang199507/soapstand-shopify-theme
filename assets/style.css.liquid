:root{
    --color-white: #FFFDFA;
    --color-dark-blue: #004E59;
    --color-water: #4A8B99;
    --color-bubbles: #BCD7DB;
}

*, *::before, *::after{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html{
    font-size: 62.5%;
}

body{
    margin: 0;
    font-family: 'Montserrat', sans-serif;
    background: #FFFDFA;
    position: relative;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    height: 100vh;
}

header{
    position: absolute;
    top: 0;
    left: 0;
}

 @font-face {
    font-family: "Brevia";
    src: url("Brevia-Bold.woff2") format("woff2"),
    url("Brevia-Bold.woff") format("woff");
}

.container{
    width: 85%;
    max-width: 1450px;
    margin: 0 auto;
    position: relative;
}

.title__primary{
    text-align: center;
}

.title__primary span{
    font-family: "Brevia", Montserrat, sans-serif;
    font-weight: 400;
    color: #fffdfa;
    display: inline-block;
}

.title__primary span::before{
    content: '';
    height: 5px;
    background: #fffdfa;
    border-radius: 5px;
    display: block;
}

.btn, .btn:visited, .btn:link{
    width: auto;
    padding: 10px 25px;
    border-radius: 50px;
    text-align: center;
    text-decoration: none;
    color: #005560;
    -webkit-transition: all .2s;
    -o-transition: all .2s;
    transition: all .2s;
    font-size: 14px;

    border: 2px solid #005560;
    background-color: #fffdfa;
}

.btn--water, .btn--water:visited, .btn--water:link{
    color: var(--color-water);
    border: 2px solid var(--color-water);
}

.btn--black, .btn--black:visited, .btn--black:link{
    color: black;
    border: 2px solid black;
}

.btn:hover{
    color: #fffdfa;
    -webkit-box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
            box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
    background: -webkit-gradient(linear, left top, right top, from(#005560), to(#94B7B8)) border-box;
    background: -o-linear-gradient(left, #005560 0%, #94B7B8 100%) border-box;
    background: linear-gradient(to right, #005560 0%, #94B7B8 100%) border-box;
    border: 2px solid transparent;
}


.btn__secondary, .btn__secondary:link, .btn__secondary:visited{
    position: absolute;
    bottom: -2vh;
    color: #fffdfa;
    border: none;
    padding: .75em 1.6em;
    font-size: 14px;
    font-family: Montserrat, sans-serif;
    font-weight: 700;
    border: 2px solid #014E59;
    background: -webkit-gradient(linear, left top, left bottom, color-stop(1.67%, #588B93), color-stop(52.62%, rgba(88, 139, 147, 0.654602)), color-stop(99.79%, rgba(88, 139, 147, 0.272308)));
    background: -o-linear-gradient(top, #588B93 1.67%, rgba(88, 139, 147, 0.654602) 52.62%, rgba(88, 139, 147, 0.272308) 99.79%);
    background: linear-gradient(180deg, #588B93 1.67%, rgba(88, 139, 147, 0.654602) 52.62%, rgba(88, 139, 147, 0.272308) 99.79%);
}

.btn__secondary:hover{
    -webkit-box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
            box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
    color: #a8cccc;
    background: transparent;
    border: 2px solid #a8cccc;
}

.shopify-challenge__container{
    max-height: 75vh;
    min-height: 600px;
    height: 75vh;        
}

.shopify-challenge__message{
    margin-top: 75px;
    color: #005560;
    font-size: 20px;
    font-weight: bold;
}

.shopify-challenge__container .shopify-challenge__button{
    margin-top: 50px;
}

.grecaptcha-badge { 
    visibility: hidden !important;
}

/* 1800px big-desktop*/
@media only screen and (min-width: 112.5em){
  html{
    font-size: 75% !important;
  }
}

/* 1200px tab-land*/
@media only screen and (max-width: 75em){
  html{
    font-size: 56.25% !important;
  }
}

/* 900px tab-port*/
@media only screen and (max-width: 56.25em){
  html{
    font-size: 50% !important;
  }
}

/*600px*/
@media only screen and (max-width: 37.5em){
    .btn, .btn:visited, .btn:link{
        padding: 1rem 1.25rem;
        font-size: 1.6rem;
    }
}

/*400px*/
@media only screen and (max-width: 25em){
    .btn, .btn:visited, .btn:link{
        padding: .75rem 1rem;
        font-size: 1.4rem;
    }
}


