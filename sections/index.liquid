<section class="hero--home">
    <section class="hero--home01">
        <div class="container row hero--home01__row">
            <div class="hero--home01__text">
                <div class="hero--home01__circle circle-01"></div>
                <div class="hero--home01__circle circle-02"></div>
                <div class="hero--home01__primary--container">
                    <div class="hero--home01__primary">let's make<br>waste-free packaging<br>the <span class="hero--home01__primary--last">norm</span></div>
                </div>
                <p class="hero--home01__secondary">Soapstand refill stations support green lifestyles by 
                    <br>making "sustainable" something that is accessible, 
                    <br>convenient and affordable.
                </p>
                <div class="hero--home01__button-groups">
                    {% if section.settings.include_home01_button01 %}
                        <a href="{{ section.settings.home01_button01-link }}" class="btn">{{ section.settings.home01_button01 }}</a>
                    {% endif %}
                    {% if section.settings.include_home01_button02 %}
                        <a href="{{ section.settings.home01_button02-link }}" class="btn">{{ section.settings.home01_button02 }}</a>
                    {% endif %}
                </div>

                <div class="heading-socials">
                    <p>Follow Us</p>
                    <ul class="heading-socials__list">
                        {% if section.settings.include_facebook %}
                            <a href="{{ section.settings.facebook-link }}"><li class="heading-socials__item"><i class="fa-brands fa-facebook-f"></i></li></a>
                        {% endif %}
                        {% if section.settings.include_linkedin %}
                            <a href="{{ section.settings.linkedin-link }}"><li class="heading-socials__item"><i class="fa-brands fa-linkedin-in"></i></li></a>
                        {% endif %}
                        {% if section.settings.include_instagram %}
                            <a href="{{ section.settings.instagram-link }}"><li class="heading-socials__item"><i class="fa-brands fa-instagram"></i></li></a>
                        {% endif %}
                        {% if section.settings.include_youtube %}
                            <a href="{{ section.settings.youtube-link }}"><li class="heading-socials__item"><i class="fa-brands fa-youtube"></i></li></a>
                        {% endif %}
                        {% if section.settings.include_twitter %}
                            <a href="{{ section.settings.twitter-link }}"><li class="heading-socials__item"><i class="fa-brands fa-twitter"></i></li></a>
                        {% endif %}
                        
                    </ul>
                </div>
            </div>
            <div class="hero--home01__image-container">
                {{ 'hero-image.svg' | asset_url | img_tag: 'hero image', 'hero--home01__image' }}  
            </div>
        </div>
        {{ 'hero-corner.svg' | asset_url | img_tag: 'hero corner image', 'hero--home01__image--corner' }}  
        {{ 'hero-bottom.svg' | asset_url | img_tag: 'hero bottom image', 'hero--home01__image--bottom' }}  
    </section>
