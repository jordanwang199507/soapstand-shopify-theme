<meta name="format-detection" content="telephone=no">
<section class="contact">
    <div class="contact-imageContainer">
        <div class="contact-bg"></div>
        <div class="contact-bgLayer"></div>
        <div class="contact-outerBound">
            <div class="contact-titleContainer">
                <h1 class="main-title">Let's get in touch</h1>
                <div class="sub-title">We can't wait to see what Soapstand can do for you</div>
            </div>
        </div>
    </div>
    <div class="form">
        <div class="contact-formL">
            {% form 'contact' %}
                <div class="form-title">Send us a direct message</div>
                {% if form.posted_successfully? %}
                    <p class="form-success">
                        Thank you! The Soapstand team will be in contact with you shortly!
                    </p>
                {% else %}
                    <div class="input-row">
                        <div class="first-name input-field">
                            <label for="first-name" class="name__label">First Name</label>
                            <input type="text" name="contact[first-name]" class="name__input" id="first-name" placeholder="First Name" required/>
                        </div>
                        <div class="last-name input-field">
                            <label for="last-name" class="name__label">Last Name</label>
                            <input type="text" name="contact[last-name]" class="name__input" id="last-name" placeholder="Last Name" required/>
                        </div>
                    </div>
                    <div class="input-row">
                        <div class="phone input-field">
                            <label for="phone" class="phone__label">Phone</label>
                            <input type="phone" name="contact[phone]" class="phone__input" id="phone" placeholder="Phone" required/>
                        </div>
                        <div class="email input-field">
                            <label for="email" class="email__label">Email</label>
                            <input type="email" name="contact[email]" class="email__input" id="email" placeholder="Email" required/>
                        </div>
                    </div>
                    <div class="organization input-field">
                        <label for="organization" class="organization__label">Group or Company</label>
                        <input type="text" name="contact[organization]" class="organization__input" id="organization" placeholder="Group or Company" required/>
                    </div>
                    <div class="message">
                        <label for="message" class="message__label">Your message</label>
                        <textarea name="contact[body]" id="message" class="message__input" placeholder="Your message..." required></textarea>
                    </div>
                    <div class="submit">
                        <input class="btn" type="submit" value="submit" />            
                    </div>
                {% endif %}
            {% endform %}
        </div>
        <div class="contact-formR">
            <div class="form-title">Contact Info</div>
            <div class="contact-formR-info">
                <div class="contact-info contact-email">
                    <i class="fa-regular fa-envelope"></i>
                    <div class="contact-emailAddress">sales@soapstand.com</div>            
                </div>
                <div class="contact-info contact-mobile">
                    <i class="fa-solid fa-mobile-screen-button"></i>
                    <div class="contact-mobileNumber">Contact Info</div>
                </div>
            </div>
            <div class="contact-formR-socialMedia">
                <ul class="contact-formR-socialList">
                    {% if section.settings.include_facebook %}
                        <a href="{{ section.settings.facebook-link }}"><li class="contact-socials__item"><i class="fa-brands fa-facebook"></i></li></a>
                    {% endif %}
                    {% if section.settings.include_instagram %}
                        <a href="{{ section.settings.instagram-link }}"><li class="contact-socials__item"><i class="fa-brands fa-instagram"></i></li></a>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>

</section> 

<style>
    .contact{
        width: 100%;
    }
    .contact-imageContainer{
        width: 100%;
        height: 150vh;
        min-height: 150rem;
        max-height: 155rem;
        position: relative;
        margin-top: -5rem;
    }
    .contact-bg{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url("https://cdn.shopify.com/s/files/1/0549/5580/2693/files/Contact-bg.png?v=1684362151");
        {% comment %} background-image: url(../assets/Contact-bg.png); {% endcomment %}
        background-size: cover;
        background-position: top;
    }
    .contact-bgLayer{
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        background-color: #00000059;
        {% comment %} background: black; {% endcomment %}
        {% comment %} opacity: 0.35; {% endcomment %}
    }
    .contact-outerBound{
        max-width: 1650px;
        width: 100%;
        height: 100%;
        margin: 0 auto;
        padding: 0 4rem;
    }
    .contact-titleContainer{
        padding: 20rem 0;
        position: absolute;
        top: 20%;
        width: 60rem;
        color: white;
    }
    .main-title{
        font-size: 6rem;
        font-weight: 700;
        margin-bottom: 2rem;
    }
    .sub-title{
        font-weight: 400;
        font-size: 3.5rem;
    }
    .form{
        padding: 0 5rem;
        max-width: 131rem;
        width: 100%;
        height: auto;
        min-height: 65rem;
        max-height: 65rem;
        margin: 0 auto;
        background: var(--color-water);
        margin-top: -50rem;
        margin-bottom: 20rem;
        position: relative;
        font-family: "Montserrat", sans-serif;
        padding: 4rem 6vw;
        display: flex;
        justify-content: space-between;
    }
    .contact-formL{
        width: 58%;
        border: 1px solid black;
    }
    .contact-formR{
        width: 38%;
        padding: 0 3rem;
    }
    .form-title{
        font-size: 3rem;
        color: var(--color-white);
        margin-bottom: 5rem;
    }
    .input-field{
        display: flex;
        flex-direction: column;
    }
    .contact-info{
        display: flex;
        margin: 0 auto 5rem auto;
        align-items: center;
        color: var(--color-white);
    }
    .contact-info i{
        font-size: 4rem;
        width: 15%;
        text-align: center;
        margin-right: 2rem;
    }
    .contact-emailAddress, .contact-mobileNumber{
        font-size: 1.8rem;
        font-weight: 400;
    }
    .contact-formR-socialList{
        display: flex;
        list-style: none;
        margin-top: 10vh;
        padding-left: 1rem;
    }
    .contact-socials__item{
        color: var(--color-white);
        font-size: 4rem;
        padding-right: 4rem;
        text-align: center;
    }

  /* 1000px tab-land*/
  @media only screen and (max-width: 62.5em){

  }
  /* 800px tab-port*/
  @media only screen and (max-width: 50em){
    .contact-titleContainer{
        width: 50rem;
    }
    .main-title{
        font-size: 5rem;
    }
    .sub-title{
        font-size: 2.8rem;
    }
  }
  /*700px*/ 
  @media only screen and (max-width: 43.75em){

  }
  /* 600px */
  @media only screen and (max-width: 37.5em){

  }
  /*500px*/
  @media only screen and (max-width: 31.25em){
    .contact-imageContainer{
        min-height: 70rem;
        max-height: 125rem;
        margin-top: -5rem;
    }
    .contact-titleContainer{
        width: 40rem;
    }
    .main-title{
        font-size: 4rem;
    }
    .sub-title{
        font-size: 2.2rem;
    }
  }
  /*400px*/
  @media only screen and (max-width: 25em){
    .contact-outerBound{
        padding: 0 2rem;
    }
    .contact-titleContainer{
        width: 90%;
    }
    .main-title{
        font-size: 3.5rem;
    }
    .sub-title{
        width: 90%;
        font-size: 2rem;
    }
  }
</style>

{% schema %}
    {
        "name": "Contact",
        "settings": [
            {
                "type": "checkbox",
                "id": "include_facebook",
                "label": "Show Facebook link icon",
                "default": true
            },
            {
                "type": "text",
                "id": "facebook-link",
                "label": "Facebook Link",
                "default": "https://www.facebook.com/TheSoapstand"
            },
            {
                "type": "checkbox",
                "id": "include_instagram",
                "label": "Show Instagram link icon",
                "default": true
            },
            {
                "type": "text",
                "id": "instagram-link",
                "label": "Instagram Link",
                "default": "https://www.instagram.com/soapstandco"
            }
        ]
    }
{% endschema %}
