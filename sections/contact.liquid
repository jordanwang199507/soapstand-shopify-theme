<meta name="format-detection" content="telephone=no">
<section class="contact">
    <div class="contact-imageContainer">
        <div class="contact-bg"></div>
        <div class="contact-bgLayer"></div>
        <div class="contact-outerBound">
            <div class="contact-titleContainer">
                <h1 class="main-title">Let's get in touch</h1>
                <div class="sub-title">We can't wait to see what Soapstand can do for you</div>
            </div>
        </div>
    </div>
    <div class="contact-form">
        <div class="contact-formL">
            {% form 'contact' %}
                {% if form.posted_successfully? %}
                    <p class="form-success">
                        Thank you! The Soapstand team will be in contact with you shortly!
                    </p>
                {% else %}
                    <div class="name">
                        <label for="name" class="name__label">name</label>
                        <input type="text" name="contact[name]" class="name__input" id="name" placeholder="name" required/>
                    </div>

                    <div class="email">
                        <label for="email" class="email__label">email</label>
                        <input type="email" name="contact[email]" class="email__input" id="email" placeholder="email" required/>
                    </div>

                    <div class="message">
                        <label for="message" class="message__label">message</label>
                        <textarea name="contact[body]" id="message" class="message__input" placeholder="message" required></textarea>
                    </div>
                    <div class="submit">
                        <input class="btn" type="submit" value="submit" />            
                    </div>
                {% endif %}
            {% endform %}
        </div>
        <div class="contact-formR">
            <div class="contact-formR-title">Contact Info</div>
            <div class="contact-formR-info">
                <div class="contact-email">
                    <i class="fa-regular fa-envelope"></i>
                    <div class="contact-emailAddress">sales@soapstand.com</div>            
                </div>
                <div class="contact-mobile">
                    <i class="fa-solid fa-mobile-screen-button"></i>
                    <div class="contact-mobileNumber">Contact Info</div>
                </div>
            </div>
            <div class="contact-formR-socialMedia">
                <ul class="contact-formR-socialList">
                    {% if section.settings.include_facebook %}
                        <a href="{{ section.settings.facebook-link }}"><li class="heading-socials__item"><i class="fa-brands fa-facebook"></i></li></a>
                    {% endif %}
                    {% if section.settings.include_instagram %}
                        <a href="{{ section.settings.instagram-link }}"><li class="heading-socials__item"><i class="fa-brands fa-instagram"></i></li></a>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>

</section> 

<style>
    .contact{
        width: 100%;
    }

    .contact-imageContainer{
        width: 100%;
        height: 150vh;
        min-height: 90rem;
        max-height: 155rem;
        position: relative;
        margin-top: -5rem;
    }
    .contact-bg{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image:: url("https://cdn.shopify.com/s/files/1/0549/5580/2693/files/Contact-bg.png?v=1684362151");
        {% comment %} background-image: url(../assets/Contact-bg.png); {% endcomment %}
        background-size: cover;
        background-position: top;
    }
    .contact-bgLayer{
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        background-color: #00000059;
        {% comment %} background: black; {% endcomment %}
        {% comment %} opacity: 0.35; {% endcomment %}
    }
    .contact-outerBound{
        max-width: 1650px;
        width: 100%;
        height: 100%;
        margin: 0 auto;
        padding: 0 4rem;
    }
    .contact-titleContainer{
        padding: 20rem 0;
        position: absolute;
        top: 20%;
        width: 60rem;
        color: white;
    }
    .main-title{
        font-size: 6rem;
        font-weight: 700;
        margin-bottom: 2rem;
    }
    .sub-title{
        font-weight: 400;
        font-size: 3.5rem;
    }

  /* 1000px tab-land*/
  @media only screen and (max-width: 62.5em){

  }
  /* 800px tab-port*/
  @media only screen and (max-width: 50em){
    .contact-titleContainer{
        width: 50rem;
    }
    .main-title{
        font-size: 5rem;
    }
    .sub-title{
        font-size: 2.8rem;
    }
  }
  /*700px*/ 
  @media only screen and (max-width: 43.75em){

  }
  /* 600px */
  @media only screen and (max-width: 37.5em){

  }
  /*500px*/
  @media only screen and (max-width: 31.25em){
    .contact-imageContainer{
        min-height: 70rem;
        max-height: 125rem;
        margin-top: -5rem;
    }
    .contact-titleContainer{
        width: 40rem;
    }
    .main-title{
        font-size: 4rem;
    }
    .sub-title{
        font-size: 2.2rem;
    }
  }
  /*400px*/
  @media only screen and (max-width: 25em){
    .contact-outerBound{
        padding: 0 2rem;
    }
    .contact-titleContainer{
        width: 90%;
    }
    .main-title{
        font-size: 3.5rem;
    }
    .sub-title{
        width: 90%;
        font-size: 2rem;
    }
  }
</style>

{% schema %}
    {
        "name": "Contact",
        "settings": [
            {
                "type": "checkbox",
                "id": "include_facebook",
                "label": "Show Facebook link icon",
                "default": true
            },
            {
                "type": "text",
                "id": "facebook-link",
                "label": "Facebook Link",
                "default": "https://www.facebook.com/TheSoapstand"
            },
            {
                "type": "checkbox",
                "id": "include_instagram",
                "label": "Show Instagram link icon",
                "default": true
            },
            {
                "type": "text",
                "id": "instagram-link",
                "label": "Instagram Link",
                "default": "https://www.instagram.com/soapstandco"
            }
        ]
    }
{% endschema %}
