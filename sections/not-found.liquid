<section class="error">
    <div class="container error-page__row">
        <div class="error-page__image-container">
            {{ 'error-mainIcon.png' | asset_url | img_tag: 'error page icon', 'error-mainIcon' }}  
        </div>
        {% if section.settings.include_error_button01 %}
            <div class="error-page__button-container">
                <a href="{{ shop.url }}" class="btn btn__secondary btn__error">{{ section.settings.error_button01_text }}</a>                
            </div>
        {% endif %}
    </div>
</section>

<style>
    body{
        background: -o-linear-gradient(270.04deg, #014E59 33.07%, #06525D 42.08%, #195F69 55.1%, #38757D 70.13%, #639299 87.15%, #9AB9BD 105.18%, #DCE6E8 124.21%, #fffdfa 133.23%);
        background: linear-gradient(179.96deg, #014E59 33.07%, #06525D 42.08%, #195F69 55.1%, #38757D 70.13%, #639299 87.15%, #9AB9BD 105.18%, #DCE6E8 124.21%, #fffdfa 133.23%);
    }

    .error{
        padding: 3em 0em 3em 0em;
        height: 85vh;
        min-height: 650px;
        max-height: 700px;
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-pack: center;
            -ms-flex-pack: center;
                justify-content: center;
        -webkit-box-align: center;
            -ms-flex-align: center;
                align-items: center;
    }

    .error-page__row{
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-orient: vertical;
        -webkit-box-direction: normal;
            -ms-flex-direction: column;
                flex-direction: column;
        -webkit-box-pack: center;
            -ms-flex-pack: center;
                justify-content: center;
        -webkit-box-align: center;
            -ms-flex-align: center;
                align-items: center;
    }

    .error-page__image-container{
        margin-bottom: 75px;
    }

    .error-mainIcon{
        width: 650px;
    }

    .error-page__button-container{
        width: 100%;
        height: 70px;
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-pack: center;
            -ms-flex-pack: center;
                justify-content: center;
    }

    .btn__error, .btn__error:link, .btn__error:visited{
        padding: 2em 5em;
        -webkit-box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
                box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
        border: 0;
        font-size: 14px; 
    }

    .btn__error:hover{
        border: 2px solid #a8cccc;
        -webkit-box-shadow: rgba(168, 204, 204, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
                box-shadow: rgba(168, 204, 204, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
    }

    @media (max-width: 949px){
        .error{
            padding: 4em 0em 4em 0em;
        }

        .error-mainIcon{
            width: 600px;
        }
    }

    @media (max-width: 800px){
        .error-mainIcon{
            width: 500px;
        }

        .btn__error, .btn__error:link, .btn__error:visited{
            padding: 1.6em 4em;
        }
    }

    @media (max-width: 600px){
        .error{
            padding: 5em 0em 5em 0em;
        }

        .error-mainIcon{
            width: 400px;
        }

        .btn__error, .btn__error:link, .btn__error:visited{
            padding: 1.4em 4em;
        }
    }

    @media (max-width: 450px){
        .error{
            padding: 3em 0em 3em 0em;
            height: 85vh;
            min-height: 450px;
            max-height: 600px;
        }

        .error-mainIcon{
            width: 300px;
        }

        .btn__error, .btn__error:link, .btn__error:visited{
            padding: 1.3em 3em;
        }
    }
</style>

{% schema %}
{
    "name": "Not found",
    "presets": [
        {
            "name": "Not found"
        }
    ],
    "settings": [
        {
            "type": "checkbox",
            "id": "include_error_button01",
            "label": "Include Error Page Button 01",
            "default": true
        },
        {
            "type": "text",
            "id": "error_button01_text",
            "label": "Error Page Button Text",
            "default": "home"
        }
    ]
}
{% endschema %}